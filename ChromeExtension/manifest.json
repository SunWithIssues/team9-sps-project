{   "name": "SustainaBrowse",    
    "version": "1.0",    
    "description": "Extension to help users evaluate the sustainability of their purchases and get tips on how to reduce their carbon footprint",    
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Click here to open menu",
        "default_icon": "images/sustainaBrowseLogo.png"
    },
    "icons": {
      "260": "images/sustainaBrowseLogo.png",
      "500": "images/sustainaBrowse.png"
    },
    "manifest_version": 2
}